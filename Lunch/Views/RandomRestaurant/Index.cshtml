<script>
    function Again() {
        location.reload();
    }
    function changeIsPUshed(element) {
        $(element).closest("form").submit();
        self.opener.location.reload();
        setTimeout("window.close()", 500)
    }
    function Back() {
        self.opener.location.reload();
        window.close();
    }
</script>
